if( <%= @task.valid? %> ) {
  $('#task_back').next().remove();
  $('#task_back').remove();
  $('#user_task_sector').remove();
  $('#ffff').after('<%= j render("users/user_task_sector") %>');
};

if(<%= @task.valid?%> == false) {
  $('#task_back').next().remove();
  $('#task_back').remove();
  $('#user_task_sector').hide();
  $('#ffff').after('<%= j render("tasks/form") %>');
};